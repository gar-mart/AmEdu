@model ForgotPasswordEmailViewModel
@{
    Layout = "Emails/_EmailLayout";
}

@section SplashMessage {
    Reset your password.
}

@section GeneralMessage {
    Someone requested a password reset for your account.
    <br />
    <strong>Username:</strong> @Model.User.UserName
    <br />
    If this was you, please click the button below to reset your password.
    <br />
    If this was not you, simply delete this email. Your account is safe.
}